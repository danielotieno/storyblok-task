{
  "name": "stroyblok-cypress-test-automation",
  "version": "1.o.0",
  "description": "This is a test project for Stroyblok task",
  "main": "index.js",
  "scripts": {
    "ui-test": "cypress open --e2e --browser chrome",
    "ui-smoke-test": "npx cypress run --env grepTags=@smoke,grepFilterSpecs=true",
    "ui-test-allure": "cypress run --browser chrome --spec cypress/e2e/AssetsTest/**.js --env allure=true",
    "allure:clear": "rm -r allure-results/ allure-report cypress/screenshots || true",
    "allure:report": "allure generate allure-results --clean -o allure-report",
    "allure:history": "mv -f allure-report/history allure-results/history && rm -r allure-report || true"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:danielotieno/storyblok-task.git"
  },
  "author": "Daniel Otieno",
  "license": "MIT",
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.40.0",
    "cypress": "^13.4.0",
    "cypress-mochawesome-reporter": "^3.6.1"
  }
}
